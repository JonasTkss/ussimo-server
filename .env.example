# Server Configuration
PORT=3001

# Montonio API
MONTONIO_API_URL=https://sandbox-api.montonio.com
MONTONIO_API_KEY=your-api-key

# Merit Aktiva API
MERIT_API_URL=https://aktiva.merit.ee
MERIT_API_ID=your-api-id
MERIT_API_KEY=your-api-key
MERIT_VAT_REG_NUMBER=your-vat-reg-number
MERIT_VAT_TAX_ID=your-vat-tax-id

# WooCommerce API
WOOCOMMERCE_URL=https://your-store-url.com
WOOCOMMERCE_CONSUMER_KEY=your-consumer-key
WOOCOMMERCE_CONSUMER_SECRET=your-consumer-secret
